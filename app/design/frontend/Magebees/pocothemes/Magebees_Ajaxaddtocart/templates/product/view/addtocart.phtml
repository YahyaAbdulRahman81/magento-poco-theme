}

$fileopt = "no";
	if ( $_product->getData('has_options') ) {
		foreach ($_product->getOptions() as $o)
		  {
			$fileopt = "no";        
			if($o->getType() == "file") {
				$fileopt = "yes";
				break;
			}
		}
	}
	
?>

<div class="box-tocart">
    <div class="fieldset">
        <?php if ($block->shouldRenderQuantity()): ?>
        <div class="field qty">
            <label class="label" for="qty"><span><?php /* @escapeNotVerified */ echo __('Qty') ?></span></label>
            <div class="qty-outer"> 
                <input type="number" name="qty" id="qty" maxlength="12" value="<?php /* @escapeNotVerified */ echo $block->getProductDefaultQty() * 1 ?>" title="<?php /* @escapeNotVerified */ echo __('Qty') ?>" class="input-text qty" data-validate="<?php echo $block->escapeHtml(json_encode($block->getQuantityValidators())) ?>" />    			
                <div class="qnty">
                    <div class="quantity-controls quantity-plus quantity-plus-qv"></div>
                    <div class="quantity-controls quantity-minus quantity-minus-qv"></div> 
                </div>
			</div>
				<script>
					require([
						'jquery'
					], function ($) {
						var qtyIncrements = parseInt('<?php echo $qtyIncrements; ?>',10);	
						var minAllowed = parseInt('<?php echo $minAllowed; ?>',10);	
						var maxAllowed = parseInt('<?php echo $maxAllowed; ?>',10);	
						$('.quantity-plus-qv').click(function () {
								var currentQty = parseInt($('#qty').val());
								var valueIncr = parseInt(currentQty+qtyIncrements);
								if(currentQty < maxAllowed){
									$('#qty').val(valueIncr);
								}
								
							});
						$('.quantity-minus-qv').click(function () {
							var currentQty = parseInt($('#qty').val());
							var valueDesc = parseInt(currentQty-qtyIncrements);
							if(currentQty > minAllowed){
								$('#qty').val(valueDesc);
							}

						});

					});
				</script>
        </div>
        <?php endif; ?>
        
        <button type="submit"
                title="<?php /* @escapeNotVerified */ echo $buttonTitle ?>"
                class="action primary ajaxproduct"
                id="product-addtocart-button">
