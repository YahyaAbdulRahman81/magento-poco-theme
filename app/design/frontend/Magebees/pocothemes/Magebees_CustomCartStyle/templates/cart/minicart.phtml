$helper = $this->getHelper();
if ($helper->enableCustomCart()) : 
$style = $helper->getMiniCartStyle();

if ($style === '1') : /* popup */ 
	echo $this->setTemplate('cart/popup.phtml')->toHtml();
elseif ($style === '2') : /* footer cart */ 
	echo $this->setTemplate('cart/footer-panel.phtml')->toHtml(); 
endif;
endif; ?>