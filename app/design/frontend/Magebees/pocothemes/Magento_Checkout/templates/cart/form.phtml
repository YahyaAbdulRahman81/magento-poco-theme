<script>
					require([
						'jquery'
					], function ($) {
						
						
			
						$('.quantity-plus-qv').click(function () {
								
								var QtyElement = $(this).attr("qtyid");
								var min_sale_qty = $("#"+QtyElement).attr("min_sale_qty");
								var max_sale_qty = $("#"+QtyElement).attr("max_sale_qty");
								var qty_increments = $("#"+QtyElement).attr("qty_increments");
					
								var qtyIncrements = parseInt(qty_increments,10);	
								var minAllowed = parseInt(min_sale_qty,10);	
								var maxAllowed = parseInt(max_sale_qty,10);	
								
								
								var currentQty = parseInt($('#'+QtyElement).val());
								var valueIncr = parseInt(currentQty+qtyIncrements);
								
								if(currentQty < maxAllowed){
									$('#'+QtyElement).val(valueIncr);
								}
								
							});
						$('.quantity-minus-qv').click(function () {
							var QtyElement = $(this).attr("qtyid");
							var min_sale_qty = $("#"+QtyElement).attr("min_sale_qty");
								var max_sale_qty = $("#"+QtyElement).attr("max_sale_qty");
								var qty_increments = $("#"+QtyElement).attr("qty_increments");
					
								var qtyIncrements = parseInt(qty_increments,10);	
								var minAllowed = parseInt(min_sale_qty,10);	
								var maxAllowed = parseInt(max_sale_qty,10);	
								
								var currentQty = parseInt($('#'+QtyElement).val());
								var valueDesc = parseInt(currentQty-qtyIncrements);
								if(currentQty >  minAllowed){
								$('#'+QtyElement).val(valueDesc);
							}

						});

					});
				</script>