	<script>
		require([
			'jquery'
		], function ($) {
			 (function() {
				var ev = new $.Event('tabclassadded'),
					orig = $.fn.addClass;
				$.fn.addClass = function() {
					$(this).trigger(ev, arguments);
					return orig.apply(this, arguments);
				}
			})();
			
			$(document).ready(function(){
				<?php if($tab_style && $tab_style == "vertical"): ?>
