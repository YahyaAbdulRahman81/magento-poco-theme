/**
 * Language switcher template
 */
?>
<?php $_helper = $this->helper('Magebees\PocoThemes\Helper\Data'); ?>
<?php $enable_flag = $_helper->getHeader('language_flag',$_helper->getStoreId()); ?>
<?php if (count($block->getStores())>1): 
	$id = $block->getIdModifier() ? '-' . $block->getIdModifier() : ''?>
	<div class="switcher language switcher-language" data-ui-id="language-switcher" id="switcher-language<?php /* @escapeNotVerified */ echo $id?>">
		<strong class="label switcher-label"><span><?php /* @escapeNotVerified */ echo __('Language') ?></span></strong>
		<div class="actions dropdown options switcher-options">
			<div class="action toggle switcher-trigger" id="switcher-language-trigger<?php /* @escapeNotVerified */ echo $id?>">
				<?php if($enable_flag): ?>
				<strong style="background-image:url('<?php /* @escapeNotVerified */ echo $block->getViewFileUrl('images/flags/flag_' . $block->getCurrentStoreCode() . '.png') ?>'); background-repeat:no-repeat;" class="view-<?php echo $block->escapeHtml($block->getCurrentStoreCode()) ?>"><span><?php echo $block->escapeHtml($block->getStoreName()) ?></span>
				</strong>
				<?php else: ?>
				<strong class="view-<?= $block->escapeHtml($block->getCurrentStoreCode()) ?>">
					<span><?php echo $block->escapeHtml($block->getStoreName()) ?></span>
				</strong>
				<?php endif; ?>
			</div>
			<ul class="dropdown switcher-dropdown"
				data-mage-init='{"dropdownDialog":{
					"appendTo":"#switcher-language<?php /* @escapeNotVerified */ echo $id ?> > .options",
					"triggerTarget":"#switcher-language-trigger<?php /* @escapeNotVerified */ echo $id ?>",
					"closeOnMouseLeave": false,
					"triggerClass":"active",
					"parentClass":"active",
					"buttons":null}}'>
				<?php foreach ($block->getStores() as $_lang): ?>
					<?php if ($_lang->getId() != $block->getCurrentStoreId()): ?>
						<?php if($enable_flag): ?>
						<li class="view-<?php echo $block->escapeHtml($_lang->getCode()); ?> switcher-option">
							<a style="background-image:url('<?php /* @escapeNotVerified */ echo $block->getViewFileUrl('images/flags/flag_' . $_lang->getCode() . '.png') ?>'); background-repeat:no-repeat;" href="#" data-post='<?php /* @escapeNotVerified */ echo $block->getTargetStorePostData($_lang); ?>'>
								<?php echo $block->escapeHtml($_lang->getName()) ?></a>
						</li>
						<?php else: ?>
						<li class="view-<?= $block->escapeHtml($_lang->getCode()) ?> switcher-option">
							<a href="#" data-post='<?= /* @noEscape */ $block->getTargetStorePostData($_lang) ?>'>
								<?= $block->escapeHtml($_lang->getName()) ?>
							</a>
						</li>
						<?php endif; ?>
					<?php endif; ?>
				<?php endforeach; ?>
			</ul>
		</div>
	</div>
<?php endif; ?>
