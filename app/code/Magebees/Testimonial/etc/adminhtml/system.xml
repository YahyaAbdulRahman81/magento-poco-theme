<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magebees" translate="label" sortOrder="100">
            <label>Magebees</label>
        </tab>
        <section id="testimonial" translate="label" type="text" sortOrder="85" showInDefault="1" 
				 showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Customer Testimonial</label>
            <tab>magebees</tab>
            <resource>Magebees_Testimonial::testimonial_config</resource>
			<group id="code" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Default Package Code</label>
				<field id="blockcode" translate="label comment" type="text" sortOrder="1" showInDefault="1" 
							showInWebsite="0" showInStore="0">
						<label>XML Tag Representation</label>
						<frontend_model>Magebees\Testimonial\Block\Adminhtml\DefaultXml</frontend_model>
						
				</field>
				<field id="temptag" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
						<label>Template Tag Representation</label>
						<frontend_model>Magebees\Testimonial\Block\Adminhtml\DefaultTemplate</frontend_model>
						
				</field>
				<field id="fronttag" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
						<label>Call Via Frontend Template File</label>
					   <frontend_model>Magebees\Testimonial\Block\Adminhtml\DefaultFrontend</frontend_model>
					  
				</field>
			</group>
            <group id="setting" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General Settings</label>
				<field id="enable" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Enabled</label> 
					<comment>Select Yes for display customer testimonials in frontend.</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>	
				<field id="enable_toplink" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Show Testimonial on Top link</label> 
					<comment>Select Yes for display customer testimonials on top link</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>
				<field id="toplink_title" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Top link title</label> 
					<depends>
						<field id="enable_toplink">1</field>
					</depends>	
					<comment>Change Top link title for Testimonial</comment> 		
				 </field>				 
				 
			</group>	
			<group id="frontend_settings" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Testimonial Settings</label>
				<field id="title_list_testimonial" translate="label comment" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Title of List of Testimonial</label> 
					<comment>Set Title for list all testimonial in frontend.</comment> 
				</field>
				<field id="title_form_testimonial" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Title of Testimonial Form</label> 
					<comment>Set Title for Testimonial form in frontend.</comment> 
				</field>
				<field id="url_key" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>URL Key</label> 
					<comment>Relative to Website Base URL.</comment> 
				</field>
				<field id="require_fields" translate="label comment" type="multiselect" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Required Field in Testimonial Form</label>
					<source_model>Magebees\Testimonial\Model\Formfield</source_model>
					<comment>Select required field in testimonial form (Name,Email,Testimonial Content field are required , You can not change from here.)</comment>
				</field>
				<field id="allow_submit" translate="label comment" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Allow Customers to Submit Testimonial</label> 
					<comment>Select Yes for allow customers to submit testimonial in frontend.</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				</field>
				<field id="enable_captcha" translate="label comment" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Enable Captcha</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display captcha code in frontend testimonial form.</comment> 
				</field>
				<field id="title_slider" translate="label comment" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Title of Slider</label> 
					<comment>Set Title for slider testimonial in frontend.</comment> 
				</field>
				<field id="content_length" translate="label comment" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Testimonial Word Limit</label>	
					<validate>validate-number</validate>
					<comment>Set testimonial content length.</comment>				
				</field>	
				<field id="display_video" translate="label comment" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Youtube Video</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display youtube video in frontend.</comment> 
				</field>
				<field id="autoplay_video" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Autoplay Youtube Video</label> 	
					<depends>
						<field id="display_video">1</field>
					</depends>					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for autoplay youtube video in frontend.</comment> 
				</field>
				 
				<field id="display_profile_img" translate="label comment" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Profile Image</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display profile image in frontend.</comment> 
				</field>
				
				<field id="profile_img_width" translate="label comment" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Profile Image Width</label> 
					<comment>Set width of profile image(set in pixel).</comment> 
				</field>
				<field id="profile_img_height" translate="label comment" type="text" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Profile Image Height</label> 
					<comment>Set height of profile image(set in pixel).</comment> 
				</field>
				<field id="display_company" translate="label comment" type="select" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Company Name</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display company name in frontend.</comment> 
				</field>				
				<field id="display_website" translate="label comment" type="select" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Link Website Url</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for link company name to website url in frontend.</comment> 
				</field>
				<field id="display_rating" translate="label comment" type="select" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Rating</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display rating in frontend.</comment> 
				</field>
				<field id="display_email" translate="label comment" type="select" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Email</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display email in frontend.</comment> 
				 </field>
				 <field id="display_address" translate="label comment" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Address</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display address in frontend.</comment> 
				 </field>
				  <field id="display_datetime" translate="label comment" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Created Date Time</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display testimonial created datetime in frontend.</comment> 
				 </field>
				 
				 <field id="slider_mode" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Slider Mode</label>
					<source_model>Magebees\Testimonial\Model\Slidemode</source_model>
					<comment>Select slider mode for testimonial.</comment> 
				</field>		
				 <field id="autoplay_slider" translate="label comment" type="select" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Auto play Slider</label> 					
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for auto play testimonial slider in frontend.</comment> 
				 </field>				
				<field id="slider_delay" translate="label comment" type="text" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Slider Speed</label>	
					<validate>validate-number</validate>
					<comment>Add value in milliseconds (default: 5000) for set slider speed.</comment>				
				</field>
				<field id="slider_pagination" translate="label comment" type="select" sortOrder="23" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Pagination in Slider</label>						
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display pagination in testimonial slider in frontend.</comment> 
				</field>
				<field id="nav_arrow" translate="label comment" type="select" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Display Navigation Arrow in Slider</label>				
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					<comment>Select Yes for display navigation arrow in testimonial slider in frontend.</comment> 
				</field>
				<field id="per_page_value" translate="label comment" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Allow Testimonial per page</label>	
					<comment>Comma-separated.(Default:5,10,15,20)
					Note:Effect only in list all testimonial page</comment>				
				</field>
				 <field id="submission_msg" translate="label comment" type="textarea" sortOrder="26" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Thank you Message</label> 
					<comment>Message displayed after testimonial submission</comment>
				 </field>
				 <field id="approve_testimonial" translate="label comment" type="select" sortOrder="27" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Approve testimonials</label> 
					<comment>Select Yes for approve testimonials in frontend.</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>
		    </group>
			<group id="admin_email_settings" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Administrator Email Notifications Settings</label>
				<field id="enable_mail_post" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Enable Email Notification for Admin on New Testimonial</label> 	
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>
				
				 <field id="post_template" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Template for Admin on New Testimonial</label>
					<depends>
						<field id="enable_mail_post">1</field>
					</depends>
					<source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
				<field id="send_to" translate="label comment" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Send to</label>
					<source_model>Magebees\Testimonial\Model\Adminmail</source_model>
				</field>
				<field id="admin_email" translate="label comment" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Email</label>
					<depends>
                    	<field id="send_to">custom</field>
                	</depends>
				</field>
				<field id="admin_email_subject" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Subject</label>				
				</field>
				 
			</group>	
			<group id="client_email_settings" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Client Email Notifications Settings</label>
				 <field id="enable_mail_approve" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1"> 
					<label>Enable Email Notification for Client on Approve Testimonial</label> 	
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>
				  <field id="approve_template" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Email Template for Client on Approve Testimonial </label>
					<depends>
						<field id="enable_mail_approve">1</field>
					</depends>
					<source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
				<field id="client_email_subject" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Subject</label>				
				</field>
</group>	
            <group id="support" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Info</label>
					<field id="style" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Info</label> 
						<frontend_model>Magebees\Testimonial\Model\Support</frontend_model>
					</field>
				</group>
        </section>
    </system>
</config>
