<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:helloworld:Magento_Widget:etc/widget.xsd">
	<widget class="Magebees\Imagegallery\Block\Widget\Gallery" id="magebees_imagegallery">
		<label>Magebees::Image Gallery For List Images</label>
		<description>Magebees Image Gallery</description>
		<parameters>
			<parameter name="template" xsi:type="select" required="true" visible="true" sort_order="-1">
                <label translate="true">Template</label>
                <options>
                    <option name="gallery" value="Magebees_Imagegallery::widget/gallery.phtml" selected="true">
                        <label translate="true">List Image Gallery</label>
                    </option>
					<option name="style-1" value="Magebees_Imagegallery::widget/style-1.phtml">
                        <label translate="true">Style 1 Template</label>
                    </option>
				</options>
            </parameter>
			
			<parameter name="wd_load_ajax" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="1">                <label translate="true">Load Gallery Image using Ajax</label>                <description translate="true">Select Yes Load Load Gallery Image using Ajax.</description> 
			</parameter>
			<parameter name="wd_show_heading" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="5">
                <label translate="true">Display heading</label>
				<description translate="true">Select Yes for display page heading.</description>
			</parameter>
			<parameter name="wd_heading" xsi:type="text" visible="true" required="true" sort_order="6">
                <label translate="true">Heading</label>
				<description translate="true">Here we can set heading.</description>
				<depends>
                    <parameter name="wd_show_heading" value="1" />
                </depends>
				<value>Instagram.Shop</value>
        </parameter>
		<parameter name="wd_show_description" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="7">
                <label translate="true">Display description</label>
				<description translate="true">Select Yes for display page description.</description>
        </parameter>
		<parameter name="wd_description_position" xsi:type="select" visible="true" sort_order="8">
				<label translate="true">Description Position.</label>
				<depends>
					<parameter name="wd_show_description" value="1" />                    
				</depends>
				<options>
				<option name="above_heading" value="above_heading"><label translate="true">Above Heading</label></option>
				<option name="below_heading" value="below_heading"><label translate="true">Below Heading</label></option>
				<option name="below_image" value="below_image"><label translate="true">Below Image List</label></option>
				</options>
		</parameter>
		<parameter name="wd_description" xsi:type="text" visible="true" required="true" sort_order="8">
                <label translate="true">Description</label>
				<description translate="true">Here we can set description.</description>
				<depends>
                    <parameter name="wd_show_description" value="1" />
                </depends>
				
        </parameter>
		<parameter name="no_of_image" sort_order="10" visible="true" required="true" xsi:type="text">
				<label>No of Images</label>
		</parameter>
		
		<parameter name="wd_slider" xsi:type="select" visible="true"
						    sort_order="15">
				<label translate="true">Enable Slider</label>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true" ><label translate="true">No</label></option>
				</options>
		</parameter>
		<parameter name="wd_items_per_slide" xsi:type="select" visible="true" sort_order="16">
				<label translate="true">Number of items per slide.</label>
				<depends>
					<parameter name="wd_slider" value="1" />                    
				</depends>
				<options>
				<option name="3" value="3"><label translate="true">3</label></option>
				<option name="4" value="4"><label translate="true">4</label></option>
				<option name="5" value="5"><label translate="true">5</label></option>
				<option name="6" value="6"><label translate="true">6</label></option>
				<option name="7" value="7"><label translate="true">7</label></option>
				<option name="8" value="8"><label translate="true">8</label></option>
				</options>
			</parameter>
			<parameter name="wd_autoscroll" xsi:type="select" visible="true"
						    sort_order="17">
				<label translate="true">Autoplay</label>
				
				<depends>
					<parameter name="wd_slider" value="1" />                    
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true" ><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_auto_play_delaytime" xsi:type="text" visible="true" required="true" sort_order="18">
				<label translate="true">Delay Time</label>
				<description translate="true">Delay between transitions (in ms)</description>
				<depends>
					<parameter name="wd_slider" value="1" />
					<parameter name="wd_autoscroll" value="1" />                    
				</depends>
				<value>3000</value>
			</parameter>
			<parameter name="wd_autoplayoff" xsi:type="select" visible="true" 
						    sort_order="19">
				<label translate="true">Disable On Mouse Enter</label>
				
				<depends>
					<parameter name="wd_slider" value="1" />
					<parameter name="wd_autoscroll" value="1" />                    
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true" ><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_slide_auto_height" xsi:type="select" visible="true"
						    sort_order="20">
				<label translate="true">Slide Auto Height </label>
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true" ><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_navarrow" xsi:type="select" visible="true"
						   sort_order="21">
				<label translate="true">Show navigation arrow</label>
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1" selected="true"><label translate="true">Yes</label></option>
				<option name="no" value="0"><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_pagination" xsi:type="select" visible="true"
						    sort_order="22">
				<label translate="true">Show Pagination</label>
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true"><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_pagination_type" xsi:type="select" visible="true"
						   sort_order="23">
				<label translate="true">Pagination Type</label>
				<depends>
					<parameter name="wd_slider" value="1" />    
					<parameter name="wd_pagination" value="1" />                   
				</depends>
				<options>
				<option name="default" value="default"><label translate="true">Default</label></option>
				<option name="dynamic" value="dynamic"><label translate="true">Dynamic</label></option>
				<option name="progress" value="progress"><label translate="true">Progress</label></option>
				<option name="fraction" value="fraction"><label translate="true">Fraction</label></option>
				<option name="custom" value="custom"><label translate="true">Custom</label></option>
				</options>
			</parameter>
			<parameter name="wd_infinite_loop" xsi:type="select" visible="true"
						    sort_order="24">
				<label translate="true">Infinite loop</label>
				
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true"><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_scrollbar" xsi:type="select" visible="true"
						   sort_order="25">
				<label translate="true">Show Scrollbar</label>
				
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true"><label translate="true">No</label></option>
				</options>
			</parameter>
			
			<parameter name="wd_grap_cursor" xsi:type="select" visible="true"
						   sort_order="26">
				<label translate="true">Slide Grab cursor</label>
				
				
				<depends>
					<parameter name="wd_slider" value="1" />                   
				</depends>
				<options>
				<option name="yes" value="1"><label translate="true">Yes</label></option>
				<option name="no" value="0" selected="true"><label translate="true">No</label></option>
				</options>
			</parameter>
			<parameter name="wd_items_per_row" xsi:type="select" visible="true"
					   sort_order="28">
				<label translate="true">Number of items per row in Main Block</label>
				<description translate="true">Show number of items per row in main block.</description>					
				<depends>                  
					<parameter name="wd_slider" value="0" />   
				</depends>  
			<options>
				<option name="3" value="3"><label translate="true">3</label></option>
				<option name="4" value="4"><label translate="true">4</label></option>
				<option name="5" value="5"><label translate="true">5</label></option>
				<option name="6" value="6"><label translate="true">6</label></option>
				<option name="7" value="7"><label translate="true">7</label></option>
				<option name="8" value="8"><label translate="true">8</label></option>
				</options>				
			</parameter>
		</parameters>
	</widget>
	
	 
	
</widgets>
