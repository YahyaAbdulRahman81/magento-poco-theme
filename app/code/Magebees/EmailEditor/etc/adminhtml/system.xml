<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magebees" translate="label" sortOrder="100">
            <label>Magebees</label>
        </tab>
        <section id="emaileditor" translate="label" type="text" sortOrder="90" showInDefault="1" 
				 showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Email Template Editor</label>
            <tab>magebees</tab>
            <resource>Magebees_EmailEditor::emaileditor_config</resource>
            <group id="setting" translate="label" type="text" sortOrder="1" showInDefault="1" 
				   showInWebsite="0" showInStore="0">
				<label>Settings</label>
				<field id="enable" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Enabled</label> 
					<comment>Select Yes for Enable Email Template Editor.</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>	
				 <field id="show_img" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Show Product Image in mail Template </label> 
					<comment>Select Yes for Display product image in sales order/invoice/creditmemo emails template.</comment> 
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
				 </field>					
			</group>
			 <group id="email_header" translate="label" type="text" sortOrder="2" showInDefault="1" 
				   showInWebsite="0" showInStore="0">
				<label>Email Header Settings</label>
					<field id="header_bgcolor" translate="label" type="text" sortOrder="2" showInWebsite="0" showInStore="0" showInDefault="1">
					<label>Email Header Background Color</label>
					<frontend_model>Magebees\EmailEditor\Block\Adminhtml\Color</frontend_model> 	    
				</field>									
			</group>	
			<group id="email_footer" translate="label" type="text" sortOrder="3" showInDefault="1" 
				   showInWebsite="0" showInStore="0">
				<label>Email Footer Settings</label>
					<field id="footer_bgcolor" translate="label" type="text" sortOrder="2" showInWebsite="0" showInStore="0" showInDefault="1">
					<label>Email Footer Background Color</label>
					<frontend_model>Magebees\EmailEditor\Block\Adminhtml\Color</frontend_model> 	    
				</field>									
			</group>	
			 <group id="light_logo" translate="label" type="text" sortOrder="4" showInDefault="1" 
				   showInWebsite="0" showInStore="0">
				<label>Email Header Logo Settings</label>
					<field id="image" translate="label comment" type="image" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">					
                    <label>Upload Email Header Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
					<upload_dir config="system/filesystem/media" scope_info="1">emaileditor/lightlogo</upload_dir>
                    <base_url type="media" scope_info="1">emaileditor/lightlogo</base_url>
					<comment>The image must be in .jpg, .png, or. gif format.</comment> 	
                </field>
                 <field id="link" translate="label comment" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Email Header Logo Link</label> 	 
				 </field>
				 <field id="alt_text" translate="label comment" type="text" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Email Header Logo Alt</label> 	 
				 </field>	
				 <field id="width" translate="label comment" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Email Header Logo Width</label> 	 
					<comment>Example: 200px</comment>
				 </field>	
				 <field id="height" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Email Header Logo Height</label> 	
					<comment>Example: 50px</comment>
				 </field>								
			</group>
			<group id="dark_logo" translate="label" type="text" sortOrder="5" showInDefault="1" 
				   showInWebsite="0" showInStore="0">
				<label>Additional Logo Settings</label>
					<field id="image" translate="label comment" type="image" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">					
                    <label>Upload Additional Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
					<upload_dir config="system/filesystem/media" scope_info="1">emaileditor/darklogo</upload_dir>
                    <base_url type="media" scope_info="1">emaileditor/darklogo</base_url>
					<comment>The image must be in .jpg, .png, or. gif format.</comment> 	
                </field>
                 <field id="link" translate="label comment" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Additional Logo Link</label> 	 
				 </field>
				 <field id="alt_text" translate="label comment" type="text" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Additional Logo Alt</label> 	 
				 </field>	
				 <field id="width" translate="label comment" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Additional Logo Width</label> 	
					<comment>Example: 200px</comment>					
				 </field>	
				 <field id="height" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Additional Logo Height</label> 	
					<comment>Example: 50px</comment>					
				 </field>								
			</group>	
