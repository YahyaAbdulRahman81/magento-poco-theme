				<field id="custom_font" translate="label comment" type="select" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Set Font Family</label> 
					<source_model>Magebees\EmailEditor\Model\Config\CustomFont</source_model>	
				</field>		
				 <field id="font_weight" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Font Weight</label> 
					<comment>Set Font Weight. Example: 400</comment> 
				 <validate>validate-number</validate>
				 </field>
				 <field id="font_size" translate="label comment" type="text" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Font Size</label> 
					<comment>Set Font Size. Example:18px</comment> 				
				 </field>	
				  <field id="font_style" translate="label comment" type="select" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Font Style</label> 
					<comment>Set Font Style.</comment> 
					<source_model>Magebees\EmailEditor\Model\Config\FontStyle</source_model> 
				 </field>	
				  <field id="line_height" translate="label comment" type="text" sortOrder="9" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Line Height</label> 
					<comment>Set Line Height. Example: 1.5</comment>				
