					<field id="total_section_color" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Email Body Order Total Section Background Color</label>
					<frontend_model>Magebees\EmailEditor\Block\Adminhtml\Color</frontend_model> 
					</field>
					
			</group>
			<group id="h1" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0">
