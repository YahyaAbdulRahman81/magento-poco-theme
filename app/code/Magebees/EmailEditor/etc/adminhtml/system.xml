					<comment>Example: 10px</comment>					
				 	</field>
				 	<field id="item_padding" translate="label comment" type="text" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0"> 
					<label>Email Top Menu Items Padding</label>
					<comment>Example: 10px</comment>					
				 	</field>	
			</group>
			<group id="body_content" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0">
