        <label translate="true">Magebees::Blog Latest Posts </label>
        <description translate="true">List of Latest Posts</description>
		<parameters>
      
		<parameter name="wd_show_heading" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="5">
                <label translate="true">Display heading</label>
				<description translate="true">Select Yes for display page heading.</description>
        </parameter>
		<parameter name="wd_heading" xsi:type="text" visible="true" required="true" sort_order="6">
                <label translate="true">Heading</label>
				<description translate="true">Here we can set heading.</description>
				<depends>
                    <parameter name="wd_show_heading" value="1" />
                </depends>
				<value>Latest Posts</value>
        </parameter>
		<parameter name="wd_show_description" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="7">
                <label translate="true">Display description</label>
				<description translate="true">Select Yes for display page description.</description>
        </parameter>
		<parameter name="wd_description" xsi:type="text" visible="true" required="true" sort_order="8">
                <label translate="true">Description</label>
				<description translate="true">Here we can set description.</description>
				<depends>
                    <parameter name="wd_show_description" value="1" />
                </depends>
				<value>Latest Posts</value>
        </parameter>
		
		
			<parameter name="wd_post_show_feature_image" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="9">
                <label translate="true">Show Post Featured Image</label>
				<description translate="true">You can display post feature image.</description>
        </parameter>
			<parameter name="feature_image_height" xsi:type="text" visible="true" required="true" sort_order="10">
                <label translate="true">Featured Image Height</label>
				<description translate="true">Here we can set image height in px.</description>
				<depends>
                    <parameter name="wd_post_show_feature_image" value="1" />
                </depends>
				<value>200</value>
        </parameter>
			<parameter name="feature_image_width" xsi:type="text" visible="true" required="true" sort_order="11">
                <label translate="true">Featured Image Width</label>
				<description translate="true">Here we can set image width in px.</description>
				<depends>
                    <parameter name="wd_post_show_feature_image" value="1" />
                </depends>
				<value>200</value>
        </parameter>
