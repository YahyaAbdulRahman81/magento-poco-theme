                <label translate="true">Sort By</label>
				<description translate="true">Set attribute that is initially used to sort the post list.</description>
        </parameter>
		
		<parameter name="wd_category" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="30">
