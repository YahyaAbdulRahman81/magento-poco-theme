                <label translate="true">Featured Image Resize Type</label>
				<description translate="true">Here we can set Image Resize Type.</description>
				<depends>
                    <parameter name="wd_post_show_feature_image" value="1" />
                </depends>
				
        </parameter>
		<parameter name="wd_post_type" xsi:type="select" visible="true"
