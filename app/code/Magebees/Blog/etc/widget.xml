                <label translate="true">Display Social Sharing Icon</label>
				<description translate="true"><![CDATA[Select Yes for display Social Sharing Icon on frontend.]]></description>           
        </parameter>
		
		<parameter name="wd_post_content" xsi:type="select" visible="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="35">
                <label translate="true">Display Post Content</label>
				<description translate="true">Select Yes for display post content.</description>
        </parameter>
		<parameter name="wd_post_content_length" xsi:type="text" visible="true" required="true" sort_order="36">
                <label translate="true">Content Length</label>
				<description translate="true">Here we can set Content length.</description>
				<depends>
                    <parameter name="wd_post_content" value="1" />
                </depends>
				<value>200</value>
        </parameter>
			<parameter name="wd_post_readmore" xsi:type="select" visible="true" required="true" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="37">
