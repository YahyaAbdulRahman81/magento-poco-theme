				<description translate="true">Set Post Ids For list of posts using comma sperated</description>
			<depends>
                    <parameter name="wd_post_type" value="custom" />
                </depends>
        </parameter>
		<parameter name="wd_post_limit" xsi:type="text" visible="true" sort_order="15">
                <label translate="true">Post Limit</label>
				<description translate="true">Set Post Limits.</description>
		</parameter>
				
