<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Backend/etc/system_file.xsd">
    <system>
		<tab id="magebees" translate="label" sortOrder="100">
            <label>Magebees</label>
        </tab>
			<section id="magebees_Onepagecheckout" translate="label" sortOrder="155" showInDefault="1" showInWebsite="1" showInStore="1">
			<class>separator-top</class>
            <label>One Page Checkout</label>
            <tab>magebees</tab>
            <resource>Magebees_Onepagecheckout::config</resource>
            	<!-- General Configuration Start -->
				<group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>General</label>
					<field id="general_configuration_separator" translate="label comment" type="label" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>General</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Separator</frontend_model>
					</field>
					<field id="enable_in_frontend" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Enable</label>
						<comment>Select Yes for display the One Page Checkout on frontend.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					</field>
					<field id="billing_different_address" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable billing to different address</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="redirect_checkout" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Redirect to checkout automatically after adding product to cart</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="suggest_address" translate="label comment" sortOrder="33" type="select" showInDefault="1"
					showInWebsite="1" showInStore="1">
						<label>Enable suggesting address by Google</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					</field>
					<field id="google_api_key" translate="label" sortOrder="35" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Google API Key</label>
						<depends>
							<field id="suggest_address">1</field>
						</depends>
						<comment><![CDATA[ Please Click <a href="https://developers.google.com/maps/documentation/javascript/examples/places-autocomplete-addressform" target="_blank"><b>here</b></a> to get this API key ]]></comment>
					</field>
					<field id="default_info_configuration_separator" translate="label comment" type="label" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Values</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Separator</frontend_model>
					</field>
					<field id="default_payment_method" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Payment Method</label> 
						<source_model>Magebees\Onepagecheckout\Model\System\Config\Source\Payment</source_model> 
					</field>
					<field id="default_shipping_method" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Shipping Method</label> 
						<source_model>Magebees\Onepagecheckout\Model\System\Config\Source\Shipping</source_model>
					</field>
					<field id="country_id" translate="label comment" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Country</label> 
						<source_model>Magento\Directory\Model\Config\Source\Country</source_model>
						  <can_be_empty>1</can_be_empty>
					<frontend_class>countries</frontend_class>
					</field>
					<field id="region_id" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Region/State</label> 
					</field>
					<field id="default_city" translate="label comment" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default City</label> 
						<!-- <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>  -->
					</field>
					<field id="default_postal_code" translate="label comment" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Default Zip/Postal Code</label> 
					</field>
					<field id="display_separator" translate="label comment" type="label" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Frontend Fields Configuration</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Separator</frontend_model>
					</field>
					<field id="checkout_title" translate="label comment" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Checkout Title</label> 
					</field>
					<field id="checkout_description" translate="label comment" type="textarea" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Checkout Description</label> 
					</field>
					<field id="add_comment" translate="label comment" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Comments to Order</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="enabled_newsletter" translate="label comment" type="select" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Newsletter</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="default_newsletter" translate="label comment" type="select" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Newsletter Checkbox Checked by Default</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="label_newsletter" translate="label comment" type="text" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Newsletter Label</label> 
					</field>
					<field id="show_discount" translate="label comment" type="select" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show Discount Code Section</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="style_layout" translate="label comment" type="label" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Layout</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Separator</frontend_model>
					</field>
					<field id="checkout_page_layout" translate="label comment" type="select" sortOrder="220" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Checkout Page Layout</label> 
						<source_model>Magebees\Onepagecheckout\Model\System\Config\Source\Layout</source_model>
					</field>
					<field id="show_header_footer" translate="label comment" type="select" sortOrder="230" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show Header and Footer</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="product_image_layout" translate="label comment" type="label" sortOrder="240" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show Product Thumbnail In Order Review Section</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Separator</frontend_model>
					</field>
					<field id="product_image_enabled" translate="label comment" type="select" sortOrder="250" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="product_image_width" translate="label comment" type="text" sortOrder="260" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Image Width</label> 
						<depends>
							<field id="product_image_enabled">1</field>
						</depends>
					</field>
					<field id="product_image_height" translate="label comment" type="text" sortOrder="260" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Image Height</label> 
						<depends>
							<field id="product_image_enabled">1</field>
						</depends>
					</field>
				</group>
				<!-- General Configuration End -->

				<!-- Field Position Configuration Start -->
				<group id="field_position_management" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Field Management</label>
					<field id="field_positions_name" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Field Position Management</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Position</frontend_model>
					</field>
				</group>
				<!-- Field Position Configuration End -->

				<!-- Checkout Mode Configuration Start -->
				<group id="osp_checkout_mode" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Checkout Mode</label>
					<field id="show_login_link" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show Login Link</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="login_link_title" translate="label comment" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Login Message</label> 
					</field>
				</group>
				<!-- Checkout Mode Configuration End -->

				<!-- Terms and Condition Configuration Start -->
				<group id="osp_terms_conditions" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Terms and Conditions</label>
					<field id="enable_terms" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Show Terms and Conditions</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="term_checkboxtitle" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Terms and Conditions Checkbox Title</label>
					</field>
					<field id="term_title" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Terms and Conditions Title</label> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="term_html" translate="label comment" type="editor" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Terms and Conditions Content (HTML)</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Editor</frontend_model>
					</field>
				</group>
				<!-- Terms and Condition Configuration End -->

				<!-- Style Management Configuration Start -->
				<group id="style_management" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Color Management</label>
					<field id="title_bg_colors" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Step Background Color #</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Form\Field\Color</frontend_model> 
						<comment><![CDATA[Specify the Step background color.]]></comment>
					</field>
					<field id="button_bg_colors" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Button Background Color #</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Form\Field\Color</frontend_model>
						<comment><![CDATA[Specify the Button background color.]]></comment>					
					</field>
					<field id="title_font_colors" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Title Font Color #</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Form\Field\Color</frontend_model>
						<comment><![CDATA[Specify the Title Font color.]]></comment>						
					</field>
					<field id="button_font_colors" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Button Font Color #</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\System\Config\Form\Field\Color</frontend_model> 
						<comment><![CDATA[Specify the Button Font color.]]></comment>
					</field>
				</group>
				<!-- Style Management Configuration End -->

				<!-- Success Page Configuration Start -->
				<group id="opc_successpage" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Success Page Customization</label>
					<field id="mockup" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Mockup</label> 
						<frontend_model>Magebees\Onepagecheckout\Block\Adminhtml\System\Config\Mockup</frontend_model>
					</field>
                    <field id="success_preview" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Usage</label>
						<frontend_model>Magebees\Onepagecheckout\Block\Adminhtml\System\Config\Successpreview</frontend_model>
					</field>
					<field id="magebeesorder_id" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Order # to preview</label> 
					</field>
				</group>
				<!-- Success Page Configuration End -->

				<!-- Delivery Date Configuration Start -->
				<group id="opc_deliverydate" type="text"  sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
	                <label>Delivery Date</label>
	                <field id="enable_delivery_date" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
							<label>Enable Delivery Date</label>
							<comment>Select Yes for display Delivery Date section in frontend.</comment> 
							<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					</field>
					
					<field id="delivery_date_required" translate="label" sortOrder="20" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Delivery Time is Required?</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
	                </field>
					
					<field id="deldate_label" translate="label" sortOrder="30" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Delivery Date Label</label>
	                </field>	
						
					<field id="format" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
	                    <label>Date Format:</label>
	                    <comment>yy-mm-dd</comment>
	                </field>
	                <field id="disabled" translate="label" type="multiselect" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
	                    <label>Non available delivery days of week</label>
	                    <source_model>Magebees\Onepagecheckout\Model\Config\Source\Disabled</source_model>
	                </field>
					
					<field id="deldate_available_from" translate="label" sortOrder="60" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Delivery will be available from</label>
						<comment>Number of days after order date. Default value is 3</comment>
	                </field>	
					<field id="deldate_available_to" translate="label" sortOrder="70" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Delivery will be available to</label>
						<comment>Number of days after order date. Default value is 7</comment>
	                </field>
					<field id="show_del_time" translate="label" sortOrder="80" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Show Delivery Time</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
	                </field>
					
	                <field id="hourMin" translate="label" type="text" sortOrder="85" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
	                    <label>Delivery Hour Start:</label>
	                    <comment>Should be 8=>8AM, 9=>9AM </comment>
						<depends>
							<field id="show_del_time">1</field>
						</depends>
	                </field>
	                <field id="hourMax" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
	                    <label>Delivery Hour End:</label>
	                    <comment>Should be 22=>7PM, 23=>8PM because Minutes cover 1hr </comment>
						<depends>
							<field id="show_del_time">1</field>
						</depends>
	                </field>
           		</group>
           		<!-- Delivery Date Configuration End -->

           		<!-- Vat Validator Configuration Start -->
				<group id="vat_validator" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>TAX/VAT Number Validation</label>
					<field id="enable_vat_validator" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Use Online VIES Validation for TAX/VAT Number</label>
						<comment>Enable for Use Online VIES Validation for TAX/VAT Number</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					</field>
				</group>
				<!-- Vat Validator Configuration End -->

				<!-- Trust Seals Configuration End -->
				<group id="trust_seals" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
	                <label>Trust Seals Block</label>
	                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Enabled</label>
	                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
	                </field>
	                <field id="label" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Secure Payment Label</label>
	                    <comment>This text will be displayed above the Trust Seals section.</comment>
	                    <depends>
	                        <field id="enabled">1</field>
	                    </depends>
	                </field>
	                <field id="badges" translate="label" type="image" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Trust Seals</label>
	                    <frontend_model>Magebees\Onepagecheckout\Block\Adminhtml\System\Config\TrustSeals\Badges</frontend_model>
	                    <backend_model>Magebees\Onepagecheckout\Model\Config\Backend\TrustSeals\Badges</backend_model>
	                    <comment><![CDATA[Trust seals will be displayed under the 'Place Order' button. You can add up to 4 seals only.]]></comment>
	                    <depends>
	                        <field id="enabled">1</field>
	                    </depends>
	                </field>
	                <field id="text" translate="label comment" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
	                    <label>Custom Text</label>
	                    <comment>This text will be displayed under the Trust Seals section.</comment>
	                    <depends>
	                        <field id="enabled">1</field>
	                    </depends>
	                </field>
            	</group>

            	<!-- Static Block Configuration End -->
	             <group id="block_configuration" translate="label comment" sortOrder="60" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Static CMS Block</label>
                    <field id="is_enabled_block" translate="label comment" sortOrder="10" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enable Static CMS Block</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>magebees_Onepagecheckout/block_configuration/is_enabled_block</config_path>
                    </field>
                    <field id="list" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Show Static Block</label>
                        <frontend_model>Magebees\Onepagecheckout\Block\Adminhtml\System\Config\StaticBlock</frontend_model>
                        <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                        <comment>Sort Order is optional. By default all the blocks will be arranged sequentially</comment>
                        <depends>
                            <field id="is_enabled_block">1</field>
                        </depends>
                        <config_path>magebees_Onepagecheckout/block_configuration/list</config_path>
                    </field>
				</group>
				
				<group id="orderattachment" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                <label>Order Attachments</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10"  showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Order Attachment</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="order_comment_title" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Section Title</label>
                    <comment>Enter Order Attachment and Comment Section Title.</comment>
                </field>
				<field id="order_comment_text_title" translate="label comment" type="text" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Order Comment Title</label>
                    <comment>Enter Order Comment Title.</comment>
					<depends>
                        <field id="order_comments">1</field>
                    </depends>
                </field>
				<field id="order_comment_file_title" translate="label comment" type="text" sortOrder="70" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Order Attachment Title</label>
                    <comment>Enter Order Attachment Title.</comment>
					<depends>
                        <field id="order_file_upload">1</field>
                    </depends>
                </field>
                <field id="order_comments_file_type" translate="label comment" type="text" sortOrder="90"  showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label> Order Attachment Type Allowed</label>
					<comment>If you have leave empty then by default file type allowed are jpg,jpeg,gif,png,txt,csv,pdf,doc,docx
					</comment>
					<depends>
                        <field id="order_file_upload">1</field>
                    </depends>
                </field>
				<field id="numberofattachment" translate="label comment" type="select" sortOrder="100"  showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Number of Attachments</label>
					<comment>How many attachment you want to show?</comment>
					<depends>
                        <field id="order_file_upload">1</field>
                    </depends>
					<source_model>Magebees\Onepagecheckout\Model\System\Config\Source\Numberofattachment</source_model>
                </field>
				</group>
				
		</section>
    </system>
</config>