<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">   
   <body>
   <block class="Magento\Catalog\Block\Product\ProductList\Related" name="catalog.product.related" template="Magebees_Ajaxaddtocart::product/popup/items.phtml" ifconfig='ajaxaddtocart/dialogboxsetting/related'>
            <arguments>
                <argument name="type" xsi:type="string">related</argument>
            </arguments>
        </block>
       <block class="Magento\Catalog\Block\Product\ProductList\Upsell" name="product.info.upsell" template="Magebees_Ajaxaddtocart::product/popup/items.phtml" ifconfig='ajaxaddtocart/dialogboxsetting/upsell'>
            <arguments>
                <argument name="type" xsi:type="string">upsell</argument>
            </arguments>
        </block>
        <block class="Magento\Catalog\Block\Product\ProductList\Crosssell" name="addtocart_crosssell"  template="Magebees_Ajaxaddtocart::product/popup/crosssell.phtml" after="-" ifconfig='ajaxaddtocart/dialogboxsetting/crosssell'>
            <arguments>
                <argument name="type" xsi:type="string">crosssell</argument>
            </arguments>
        </block>
       
    </body>
</page>
