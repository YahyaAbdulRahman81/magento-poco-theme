<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="page-product-grouped"/>
    <block class="Magento\Catalog\Block\Product\View" name="product.info" template="Magebees_Ajaxaddtocart::form.phtml" after="alert.urls">
        <block class="Magento\Framework\View\Element\Template" name="product.info.block.products" as="block_products">
            <block class="Magento\Catalog\Block\Product\ProductList\Related" name="catalog.product.related" template="Magebees_Ajaxaddtocart::product/list/items.phtml" ifconfig='ajaxaddtocart/dialogboxsetting/related' after="product.info.grouped">
                <arguments>
                    <argument name="type" xsi:type="string">related</argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\ProductList\Upsell" name="product.info.upsell" template="Magebees_Ajaxaddtocart::product/list/items.phtml" ifconfig='ajaxaddtocart/dialogboxsetting/upsell' after="product.info.grouped">
                <arguments>
                    <argument name="type" xsi:type="string">upsell</argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\ProductList\Crosssell"  template="Magebees_Ajaxaddtocart::product/list/crosssell.phtml" after="product.info.grouped" ifconfig='ajaxaddtocart/dialogboxsetting/crosssell'>
            <arguments>
                <argument name="type" xsi:type="string">crosssell</argument>
            </arguments>
        </block>            
        </block>
    </block>
    <referenceContainer name="product.info.form.content">
    <block class="Magento\Catalog\Block\Product\View" name="product.info.addtocart" as="addtocart" template="Magebees_Ajaxaddtocart::addtocart.phtml"/>
        <block class="Magento\GroupedProduct\Block\Product\View\Type\Grouped" name="product.info.grouped" before="product.info.addtocart" template="Magebees_Ajaxaddtocart::product/view/type/grouped.phtml"/>
        <container name="product.info.grouped.extra" after="product.info.grouped" before="product.info.grouped" as="product_type_data_extra" label="Product Extra Info"/>
        
    </referenceContainer>
       
    </body>
</page>
